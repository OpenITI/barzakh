# ١٨٠ يرجي المرء ما إن لا يراه %~% [وتعرض دون أبعده الخطوب] ٢٣٢/١
٢١٢ لا بارك الله في الغواني هل %~% يصبحن إلا لهن مطلب ٣٠٢/١
٢١٨ مشائيم ليسوا مصلحين عشيرة %~% ولا ناعب إلا ببين غرابها ٣٠٦/١
٢٥٦ [طعامهم لئن أكلوا معد] %~% وما إن لا تحاك لهم ثياب ٢٣٨/١
٢٦٩ بآية قام ينطق كل شيء %~% وخان أمانة الديك الغراب ٢١/٢
٢٩٥ [كذاك أدبت حتى صار من خلقي] %~% أني رأيت ملاك الشيمة الأدب ٦٥/٢
٣٤١ [هذا لعمركم الصغار بعينيه] %~% لا أم لي إن كان ذاك ولا أب ٢٤٣/٢
٣٨٠ تتابعن حتى لم تكن لي ريبة %~% ولم يك عما خبروا متعقب ٨١/٣
٣٩٦ فظل لنا يوم لذيذ بنعمة %~% فقل في مقيل نحسه متغيب ٨٨/٣
٤٠٥ وقد عاد عذب الماء بحرا فزادني %~% على ظمئي أن أبحر المشرب العذب ٩٤/٣
٤٦٩ كأنهن خوافي أجدل قرم %~% ولى ليسبقه بالأمعز الخرب ١٦٢/٣
٤٩٠ ليس بالمنكر أن برزت سبقا %~% غير مدفوع عن السبق العراب ١٦٩/٣
٥٠٢ فإنك شمس والملوك كواكب %~% إذا طلعت لم يبد منهن كوكب ١٧٥/٣
٥٠٨ هجرت غضوب وحب من يتغضب %~% [وعدت عواد دون وليك تشعب] ١٨٣/٣
٥٣٩ هذا سراقة للقرآن يدرسه %~% [والمرء عند الرشا إن يلقها ذيب] ٢٢٢/٣
٥٦٠ وغيرها عن وصلها الشيب إنه %~% شفيع إلى بعض الخدود مدرب ٢٤٨/٣
٦٤٠ ثممت حوائجي ووذأت بشرا %~% فبين معرس الركب السغاب ١٣٥/٤
٦٤٤ ولي ببلاد السند عند أميرها %~% حوائج جمات وعندي ثوابها ١٣٦/٤
٦٧٤ تجلو البوارق عن مجر مز لهق %~% كأنه متقبي يلمق عزب ١٧٤/٤
٦٩٨ فلست لإنسي ولكن لملأك %~% تنزل من جو السماء يصوب ١٩٤/٤
٧١٢ سواسية سود الوجوه كأنما %~% بطونهم من كثرة الزاد أوطب ١٩٨/٤
٧٢٧ فهذي سيوف يا صدي بن مالك %~% كثير ولكن أين بالسيف ضارب ٢٠٥/٤
٧٣٧ يقلب رأسا لم يكن رأس سيد %~% وعينا له حولاء باد عيوبها ٢٠٩/٤
PageV04P293
# ٧٥٠ وكل أناس قاربوا قيد فحلهم %~% ونحن خلعنا قيده فهو سارب ٢٢٥/٤
٧٧٥ [فقالت لنا أهلا وسهلا وزودت %~% جنى النحل] أو ما زودت منه أطيب ٢٨٤/٤
٢٥ ف بالعقود وبالأيمان لا سيما %~% عقد وفاء به من أعظم القرب ٤٥/١
٧٤ أقاتل حتى لا أرى لي مقاتلا %~% وأنجو إذا غم الجبان من الكرب ١٢٤/١
٩٥ يا صاح بلغ ذوي الزوجات كلهم %~% [أن ليس وصل إذا انحلت عرا الذنب] ١٥٦/١
١٢٠ كلمع أيدي مثاكيل مسلبة %~% يندبن ضرس بنات الدهر والخطب ١٧٨/١
١٢٨ أتهجر بيتا بالحجاز تلفعت %~% به الخوف والأعداء من كل جانب ١٩٦/١
١٥٥ [أبلغ أبا دختنوس مألكة] %~% غير الذي قد يقال ملكذب ٢١١/١
١٦٦ فأما القتال لا قتال لديكم %~% [ولكن سيرا في عراض المواكب] ٣١٨/١
١٧٨ [فما سودتني عامر عن وراثة] %~% أبي الله أن أسمو بأم ولا أب ٣٣١/١
١٨١ ما إن رأيت ولا سمعت بمثله %~% [كاليوم هانىء أينق جرب] ٣٣٣/١
١٩٢ إذن والله نرميهم بحرب %~% [يشيب الطفل من قبل المشيب] ٢٥٣/١
٢٣٢ [وعدت وكان الخلف منك سجية] %~% مواعيد عرقوب أخاه بيثرب ٣٢٢/١ ،
~~١٩٦/٢,٣٢٣
٢٣٥ تدري فوق متنيها قرونا %~% على بشر وآنسة لباب ٣٢٤/١
٢٥٠ فلولا الله والمهر المفدى %~% لرحت وأنت غربال الإهاب ٣٣٠/١
٢٩٠ فكن لي شفيعا يوم لا ذو شفاعة %~% بمغن فتيلا عن سواد بن قارب ٦١/٢
٢٩١ فإن تنأعنها حقبة لا تلاقها %~% فإنك مما أحدثت بالمجرب ٦٢/٢
٣٠٥ إذا كوكب الخرقاء لاح بسحرة %~% سهيل أذاعت غزلها في القرائب ٩٠/٢
٣٢٦ أمرتك الخير [فافعل ما أمرت به %~% فقد تركتك ذا مال وذا نشب] ١٧١/٢
٣٣٠ [صريع غوان راقهن ورقنه] %~% لدن شاب حتى شاب سود الذوائب ١٨٥/٢
٣٦٣ سراة بني أبي بكر تساموا %~% على كان المسومة العراب ٥٠/٣
٣٨١ وأطنابه أرسان جرد كأنها %~% صدور القنا من بادىء ومعقب ٨١/٣
