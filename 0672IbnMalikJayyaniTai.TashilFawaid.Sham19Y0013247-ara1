# ولسرع " سرعان " و " وشكان " مثلثين، ولا فترق " شتان " ولأبطأ " بطآن "
~~ولأعجب " واها " و " وي " ولأتوجع " اوه "،
# ولأتضجر " اف " ما لم تؤنث بالتاء فتنتصب مصدرا، وقد ترفع، ولأتكره " اخ "
# و" كخ " ولأجيب " هاء " ولأكتفي " بجل " و " قط " وقد في احد الوجهين
# ومنها ظروف وشبهها جارة ضمير مخاطب كثيرا وضمير غائب قليلا ك "مكانك "
~~بمعنى " اثبت " و " عندك "

